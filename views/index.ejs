        });

        // Use event delegation for menu toggle
        document.body.addEventListener('click', (event) => {
            if (menuToggle.contains(event.target)) {
                toggleMobileMenu();
            } else if (menuClose.contains(event.target) || (mobileMenu.classList.contains('visible') && !mobileMenu.contains(event.target))) {
                closeMobileMenu();
            }
        });

        // Toggle mobile menu visibility
        const toggleMobileMenu = () => {
            mobileMenu.classList.toggle('hidden');
            mobileMenu.classList.toggle('visible');
            menuToggle.classList.toggle('open');
            navbar.classList.toggle('inverted');
            body.classList.toggle('overflow-hidden');
        };

        const closeMobileMenu = () => {
            mobileMenu.classList.add('hidden');
            mobileMenu.classList.remove('visible');
            menuToggle.classList.remove('open');
            navbar.classList.remove('inverted');
            body.classList.remove('overflow-hidden');
        };

        // Functions for video loading
        const loadImages = () => {
            document.querySelectorAll('img[data-src]').forEach(img => {
                img.src = img.dataset.src;
                img.removeAttribute('data-src');
            });
        };

        if (video) {
            video.addEventListener('canplaythrough', loadImages);
            video.addEventListener('play', () => {
                video.muted = false;
            });
        }
    });
</script>

